        <em style="font-size: 11px; color: #999;">(–º—ñ–Ω—ñ–º—É–º <%= @minimum_password_length %> —Å–∏–º–≤–æ–ª—ñ–≤)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "–ü—ñ–¥—Ç–≤–µ—Ä–¥–∂–µ–Ω–Ω—è –ø–∞—Ä–æ–ª—é", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", required: true %>
      </div>

      <%= f.submit "–ó–∞—Ä–µ—î—Å—Ç—Ä—É–≤–∞—Ç–∏—Å—è", class: "btn-auth" %>
    <% end %>

    <div class="auth-footer">
      –í–∂–µ –º–∞—î—Ç–µ –∞–∫–∞—É–Ω—Ç? 
      <%- if controller_name != 'sessions' %>
        <%= link_to "–£–≤—ñ–π—Ç–∏", new_session_path(resource_name) %>
      <% end %>
    </div>
  </div>
</div>