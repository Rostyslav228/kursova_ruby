            <span>–ó–∞–ø–∞–º'—è—Ç–∞—Ç–∏ –º–µ–Ω–µ</span>
          </label>
          
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "–ó–∞–±—É–ª–∏ –ø–∞—Ä–æ–ª—å?", new_password_path(resource_name), class: "forgot-password" %>
          <% end %>
        </div>
      <% end %>

      <%= f.submit "–£–≤—ñ–π—Ç–∏", class: "btn-auth" %>
